<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ykim164cs242.tournamentor.ListItem.MatchListItem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/standing_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".2"
            android:text="RK"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/standing_teamname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".2"
            android:text="teamName"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/standing_played"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".2"
            android:text="P"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/standing_goaldiff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".2"
            android:text="GD"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/standing_points"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:text="PTS"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>
