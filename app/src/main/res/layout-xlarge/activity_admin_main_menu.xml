<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/gradient_background"
    tools:context="ykim164cs242.tournamentor.Activity.Admin.AdminTournamentMenuActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Admin Menu"
        android:textSize="58dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/secondaryColor" />

    <TextView
        android:id="@+id/admin_channel_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="48dp"
        android:text="channelName"

        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/edit_admin_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textSize="48dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:text="Edit Channel Name"
        android:textColor="@color/colorBlack"
        android:background="@drawable/button_design"/>

    <Button
        android:id="@+id/manage_tournament_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="48dp"
        android:layout_weight="1"
        android:text="Manage Tournament"
        android:textColor="@color/colorBlack"
        android:background="@drawable/button_design"/>

    <Button
        android:id="@+id/admin_signout_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="48dp"
        android:layout_weight="1"
        android:text="Sign Out"
        android:textColor="@color/colorBlack"
        android:background="@drawable/button_design"/>

    <Button
        android:id="@+id/delete_channel_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"

        android:textSize="48dp"
        android:layout_weight="1"
        android:text="Delete This Channel"
        android:textColor="@color/colorBlack"
        android:background="@drawable/button_design"/>

</LinearLayout>
